pipeline  {
    agent any
    
    tools {
        jdk 'jdk17'
        maven 'maven3'
    }
    
    parameters {
        choice (name: 'Cbranch', choices: ['main', 'qa', 'dev'], description: 'branch choices')
    }
    
    stages {
        stage('Git checkout') {
            steps {
                git branch: "${params.Cbranch}", credentialsId: 'your_credentials_id', url: 'https://github.com/neetaniraula/Boardgame.git'
            }
        }
        
      stage('maven compile') {
          steps {
              sh "mvn compile"
          }
      }
      
        stage('Build') {
            steps {
                sh "mvn package"
            }
        }
    }
    
    
}
