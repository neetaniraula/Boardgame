pipeline  {
    agent any
    
    tools {
        jdk 'jdk17'
        maven 'maven3'
    }
    
    parameters {
        string (name: 'Git_Branch', defaultValue: 'main', description: 'git branch name')
    }
    
    stages {
        stage('Git checkout') {
            steps {
                git branch: "${params.Git_Branch}", credentialsId: 'your_credentials_id', url: 'https://github.com/neetaniraula/Boardgame.git'
            }
        }
        
      stage('maven compile') {
          steps {
              sh "mvn compile"
          }
      }
      
        stage('Build') {
            steps {
                sh "mvn package"
            }
        }
    }
    
    
}
